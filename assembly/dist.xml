<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
        <directory>${project.build.directory}</directory>
        <outputDirectory>dist</outputDirectory>
        <includes>
            <include>*.tar.gz</include>
        </includes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>logs</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>scripts/README.md</source>
    </file>
    <file>
      <source>scripts/install.bat</source>
    </file>
    <file>
      <source>scripts/setup.bat</source>
    </file>
  </files>
</assembly>