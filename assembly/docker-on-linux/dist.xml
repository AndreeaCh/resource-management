<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>dist</outputDirectory>
      <includes>
        <include>easy-manage-docker-on-linux-bin.tar.gz</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
        <outputDirectory>images</outputDirectory>
        <includes>
          <include>backend-docker-image.tar.gz</include>
          <include>${frontend.docker.image.filename}</include>
          <include>${db.docker.image.filename}</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>logs</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>deploy/docker-on-linux/install_instructions.md</source>
      <destName>README.md</destName>
    </file>
    <file>
      <source>deploy/docker-on-linux/setup.sh</source>
      <fileMode>0744</fileMode>
    </file>
    <file>
      <source>deploy/docker-on-linux/install.sh</source>
      <fileMode>0744</fileMode>
    </file>
  </files>
</assembly>
