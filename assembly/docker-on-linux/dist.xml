<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
        <directory>${project.build.directory}</directory>
        <outputDirectory>images</outputDirectory>
        <includes>
            <include>resource-management-backend-*.tar.gz</include>
            <include>resource-management-frontend-*.tar.gz</include>
            <include>resource-management-db-*.tar.gz</include>
        </includes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>logs</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>deploy/docker-on-linux/install_instructions.md</source>
      <destName>README.md</destName>
    </file>
    <file>
      <source>deploy/docker-on-linux/setup.sh</source>
      <fileMode>0744</fileMode>
    </file>
    <file>
      <source>deploy/docker-on-linux/install.sh</source>
      <fileMode>0744</fileMode>
    </file>
  </files>
</assembly>