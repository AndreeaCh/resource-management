<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
        <directory>${project.build.directory}</directory>
        <outputDirectory>dist</outputDirectory>
        <includes>
            <include>resource-management-bin.zip</include>
        </includes>
    </fileSet>
    <fileSet>
      <directory>deploy</directory>
      <outputDirectory>scripts</outputDirectory>
      <includes>
        <include>chocolatey/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>logs</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>deploy/windows-native/install_instructions.md</source>
      <destName>README.md</destName>
    </file>
    <file>
      <source>deploy/windows-native/install.bat</source>
    </file>
    <file>
      <source>deploy/windows-native/setup.bat</source>
    </file>
  </files>
</assembly>