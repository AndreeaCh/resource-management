<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${win.native.build.directory}/fillDb</directory>
      <outputDirectory>import</outputDirectory>
      <includes>
        <include>*.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${win.native.build.directory}/dist</directory>
      <outputDirectory>dist</outputDirectory>
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>logs</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${win.native.build.directory}/run/run_instructions.md</source>
      <destName>README.md</destName>
    </file>
    <file>
      <source>${project.build.directory}/resource-management-0.0.3-SNAPSHOT.jar</source>
      <outputDirectory>jars</outputDirectory>
      <destName>easy-manage.jar</destName>
    </file>
    <file>
      <source>${win.native.build.directory}/run/easymanage.bat</source>
      <outputDirectory>bin</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/run/start.bat</source>
      <outputDirectory>scripts</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/run/status.bat</source>
      <outputDirectory>scripts</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/run/stop.bat</source>
      <outputDirectory>scripts</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/setup/uninstall.bat</source>
      <outputDirectory>scripts</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/setup/uninstall_tools.bat</source>
      <outputDirectory>scripts</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/run/deploy.bat</source>
      <destName>run-backend.bat</destName>
      <outputDirectory>scripts</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/run/fillDb.bat</source>
      <destName>import.bat</destName>
      <outputDirectory>scripts</outputDirectory>
    </file>
    <file>
      <source>${win.native.build.directory}/run/production.application.properties</source>
      <destName>application.properties</destName>
    </file>
    <file>
      <source>${win.native.build.directory}/run/production.log4j2.properties</source>
      <destName>log4j2.properties</destName>
    </file>
  </files>
</assembly>
